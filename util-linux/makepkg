#!/bin/bash
NAME="util-linux"
VERSION="2.41"
TARBALL_URL="https://github.com/util-linux/util-linux/archive/refs/tags/v$VERSION.tar.gz"

build() {
  ./autogen.sh
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --libdir=/usr/lib \
    --disable-nls \
    --without-systemd \
    --without-python

  make -j"$JOBS"
}

install() {
  sudo make install-strip DESTDIR="$INSTALLDIR"
}

configure() {
  cd "$ROOT_DIR/rootfs"
  sudo chown root:root "bin/login"
  sudo chmod 755 "bin/login"
  ln -s /proc/self/mounts etc/mtab
}
